<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_center"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:background="@drawable/beijing"

        >

        <com.trackersurvey.util.CircleImageView
            android:id="@+id/mine_mian_img"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/head"
            app:border_width="0dp" />

        <LinearLayout
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_mian_img"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/lable_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/mine_mian_img"
                android:layout_toRightOf="@id/mine_mian_img"
                android:padding="5dp"
                android:text="@string/nickname"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mine_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@id/lable_nickname"
                android:layout_toEndOf="@id/lable_nickname"
                android:layout_toRightOf="@id/lable_nickname"
                android:padding="5dp"
                android:text="  "
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id1"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/lable_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/idlable_div"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mine_mobilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="  "
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/dividertxt"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:background="@color/gray_e"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
      android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_album_layout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/bg_mine_layout_press"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ic_mine_album" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/mine_album"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/my_group_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@mipmap/kuang">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/qunzu" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_marginTop="10dp"
                android:text="@string/mine_group"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

    <LinearLayout
        android:padding="1dp"
     android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:id="@+id/my_setting_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="140dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/kuang">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:src="@mipmap/yingyong" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mine_setting"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_exit_app"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@mipmap/kuang">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/tuichu" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="退出登入"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:id="@+id/my_help_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"
                android:layout_marginTop="2dp"
                android:background="@mipmap/kuang">

                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:src="@mipmap/ic_mine_help" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="帮助"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/ll_exit_app1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@mipmap/kuang">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/tuichu" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/exit_app"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_help_layout1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/bg_mine_layout_press"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ic_mine_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/mine_help"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/gray_b"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>